<% flash.each do |key, msg| %>
	<%= content_tag :div, msg, class: key %> 
<% end %>
<%= form_tag("/", method: "post", class: "col-lg-12 inline tree_form", id: "parsing") do %>
	<%= text_field_tag(:text_to_parse, nil,  class: "form-control", name: "asdf", placeholder: "Type a sentence to draw its parse tree") %>
	<br>
	<%= radio_button_tag(:grammar, "1") %>
	<%= label_tag(:grammar_1, "Grammar 1 (simple, but no adverbs or conjunctions)") %>
	<br>
	<%= radio_button_tag(:grammar, "2") %>
	<%= label_tag(:grammar_2, "Grammar 2 (somewhat complex)") %>
	<br>
	<%= radio_button_tag(:grammar, "3") %>
	<%= label_tag(:grammar_3, "Grammar 3 (complex but less restrictive)") %>
	<%= submit_tag "Draw Tree", class: "col-lg-offset-10 col-lg-2 submit draw_tree", id: "parsing-submit-button" %>
<% end %>
<div id="result"></div>
<div id="survey" style="display: none;"><strong>Thank you for using our app. Would you like to take a survey? Go to <%= link_to 'survey', log_new_path %></strong> or 
<%= button_tag "relearn linguistics" %> </div>




