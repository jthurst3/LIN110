<% flash.each do |key, msg| %>
	<%= content_tag :div, msg, class: key %> 
<% end %>
<%= form_tag("/", method: "post", class: "col-lg-12 inline tree_form") do %>
	<%= text_field_tag(:text_to_parse, nil,  class: "form-control", placeholder: "Type a sentence to draw its parse tree") %>
	<%= submit_tag "Draw Tree", class: "col-lg-offset-10 col-lg-2 submit draw_tree" %>
<% end %>
<div id="result"></div>
<div id="survey" style="display: none;"><strong>Thank you for using our app. Would you like to take a survey? Go to <%= link_to 'survey', log_new_path %></strong> or 
<%= button_tag "relearn linguistics" %> </div>




