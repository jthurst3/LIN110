<header class="row">
	<div class="col-lg-offset-2 col-lg-8 green">
		<h2>Learn Linguistics Faster</h2>
	</div>
</header>
<section class="row">
	<div class="col-lg-offset-2 col-lg-8 form-class green">
		<%= form_tag("/", method: "post", class: "col-lg-12 inline") do %>
			<%= text_field_tag(:text_to_parse, nil,  class: "form-control", placeholder: "Type a sentence to draw its parse tree") %>
			<%= submit_tag "Draw Tree", class: "col-lg-offset-10 col-lg-2 submit" %>
			<%= text_area_tag(:input, @log) %>
		<% end %>
	</div>
</section>
<footer class="row">
	<div class="col-lg-offset-2 col-lg-8 green">
		<p>Authors: Hassler, Luisa, Jamie, Ben</p>
	</div>
</footer>



